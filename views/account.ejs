  <body>
      <div id="header">;
      </div>

      <div class="light-blue title-bar">
        <h4>MY ACCOUNT</h4>
      </div>

      <div class="account-info">
        <div class="general main-category row">
          <div class="personal-info col-sm-4">
            <div class="subcategory">
              <form id="updatePersonalInfo">
                <span class="xsmall">FIRST NAME</span><br>
                <input type="text" id="account--firstname"/><br>
                <span class="xsmall">LAST NAME</span><br>
                <input type="text" id="account--lastname"/><br>
                <span class="xsmall">EMAIL</span><br>
                <input type="text" id="account--email"/><br>
                <span class="xsmall">PASSWORD</span><br>
                <input type="text" id="account--password" value="•••••••••••••"/>
                <br><br>
                <button type="submit" class="small-blue inactive">Save Changes</button>
              </form>
            </div>
          </div>
          <div class="call-history col-sm-4">
            <div class="subcategory">
              <h5>Call History</h5>
              <div class="call-receipt">
              </div>
            </div>
          </div>
          <div class="payment-methods col-sm-4">
            <div class="subcategory">
              <h5>Payment Methods</h5>
              <div class="saved-cards subcategory">
                <span class="xsmall">DEFAULT &nbsp;&nbsp;</span>
                Visa x0849
              </div>
              <br>
              <form action="/newPaymentMethod" method="POST" id="addPaymentMethod">
                <span class="payment-errors"></span>
                <span class="xsmall">CREDIT CARD NUMBER</span><br>
                <input type="text" size="20" data-stripe="number"/><br>
                <span class="xsmall">CVC</span><br>
                <input type="text" size="4" data-stripe="cvc"/><br>
                <span class="xsmall">EXPIRATION</span><br>
                <input type="text" size="2" data-stripe="exp-month"/>
                <input type="text" size="4" data-stripe="exp-year"/>
                <br><br>
                <button type="submit" class="small-blue">Add Payment Method</button>
              </form>
            </div>
          </div>
        </div>

        <div class="expert main-category row">
          <h5>Expert Profile</h5>
          <div class="bio subcategory">
            <form id="updateBio">
              <span class="xsmall">YOUR BIO (200 CHAR. MAX)</span><br>
              <textarea id="account--bio"></textarea>
            </form>
          </div>
          <div class="topics subcategory">
            <div class="saved-topics subcategory">
              <span class="xsmall">TOPICS OF EXPERTISE</span><br>
              No topics have been added yet.
            </div>
            <form id="addNewTopic">
              <span class="xsmall">ADD NEW TOPIC</span><br>
              <input type="text" size="20" data-stripe="number"/><br>
              <br>
              <button type="submit" class="small-blue">SUBMIT</button>
            </form>
          </div>
        </div>


    </div>



