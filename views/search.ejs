<!DOCTYPE html>
<html>
  <head>
    <% include partials/_head.ejs %>
  </head>

  <body>
    <div class="container-fluid">
      <div id="header" class="row">
        <% include partials/_header.ejs %>
      </div>

      <div class="title-bar search row">
        <h3>Find the perfect mentor.</h3>
      </div>

      <div class="row search--container">
        <form id="userSearchForm" class="col-md-4 light-gray padded-20">
          <h5 class="inline">Topics of expertise</h5>
          <button class="small blue" id="clearSearchQuery">reset</button>
          <br><br>
          <ul class="topicList topicList-1">
            <li data-selector="music">MUSIC</li>
            <ul class="topicList topicList-2" id="music">
              <li data-selector="performance">PERFORMANCE</li>
              <ul class="topicList topicList-3" id="performance">
                <li class="inactive" data-keyword="music_performance_percussion">PERCUSSION <span class="xsmall">(coming soon)</span></li>
                <li class="keyword" data-keyword="music_performance_bass">BASS</li>
                <li class="keyword" data-keyword="music_performance_guitar">GUITAR</li>
                <li class="keyword" data-keyword="music_performance_piano">PIANO</li>
                <li class="keyword" data-keyword="music_performance_voice">VOICE</li>
              </ul>
              <li class="keyword" data-keyword="music_composition">COMPOSITION</li>
              <li class="keyword" data-keyword="music_marketing">MARKETING &amp; PROMOTION</li>
              <li class="keyword" data-keyword="music_engineering">ENGINEERING</li>
            </ul>
            <li data-selector="visual-art">VISUAL ART</li>
            <ul class="topicList topicList-2" id="visual-art">
              <li class="keyword" data-keyword="art_fineart">FINE ART</li>
              <li class="keyword" data-keyword="art_design">DESIGN</li>
            </ul>
            <li class="inactive">WRITING <span class="xsmall">(coming soon)</span></li>
            <li class="inactive">THEATRE <span class="xsmall">(coming soon)</span></li>
            <li class="inactive">FILM <span class="xsmall">(coming soon)</span></li>
            <li class="inactive">CULINARY ARTS <span class="xsmall">(coming soon)</span></li>
          </ul>
          <input type="hidden" id="query">
          <br><br>
        </form>

        <div class="col-md-8">
          <div id="searchResults" class="text-center">
            <img id="noSearchResults" src="../assets/searchresults_default-01.svg" height="600">
          </div>
        </div>
      </div>

      <div id="call-container" class="row">
        <% include partials/_call.ejs %>
        <% include partials/_call-booking.ejs %>
      </div>

      <div id="footer" class="row">
        <% include partials/_footer.ejs %>
      </div>
    </div>

    <script>
      var secure = '<%= secure %>';
      var token = '<%= token %>';
    </script>
    <script type="text/javascript" src="js/search.js"></script>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-68991189-1', 'auto');
      ga('send', 'pageview');
    </script>

  </body>
</html>
